<%- include("../partials/header") %>

<!-- <div class="container"> -->
    <div class="row">
            <h1 style="text-align: center;">Edit <%= campground.name %></h1>
            <div style="width: 50%; margin: 30px auto;">
                <form action="/campgrounds/<%=campground.slug%>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                         <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>">
                    </div>
                    <div class="form-group">
                        <input type="file" id="image" name="image" accept="image/*">        <!--SOMETHING TO DO WITH NAME=IMAGE?-->
                    </div>
                     <div class="form-group">
                         <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
                    </div>
                    <div class="form-group">
                         <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                     </div>
                    <div class="form-group">
                          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                    <a href="/campgrounds">Go Back</a>
                </form>
            </div>
        </div>
<!-- </div> -->

<%- include("../partials/footer") %>
